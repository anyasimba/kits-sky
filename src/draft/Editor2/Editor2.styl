// production
.PolygonEditor {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;

    &-menu {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 2;    
    }

    &-editor {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;

        img {
            position: absolute;
            top: 0;
            left: 0;
            transform: translate(-50%, -50%);
        }
    }

    &-editor-inner {
        position: absolute;
        user-select: none;
        transform-origin: left top;
        top: 50%;
        left: 50%;
    }

    &-menu-item-menu {
        background: #FFFFFF;
    }

    &-menu-item-menu-item {
        text-align: left;
        width: 100%;
    }

    &-point {
        position: absolute;
        top: 0;
        left: 0;
        polyline {
            fill: none;
            stroke-width: inherit;
            stroke: rgba(0, 150, 200, 1);
        }
    }

    &-line {
        position: absolute;
        top: 0;
        left: 0;
        polyline {
            fill: none;
            stroke-width: inherit;
            stroke: rgba(0, 150, 200, 1);
        }
    }

    &-edit-point {
        position: absolute;
        top: 0;
        left: 0;
        circle {
            fill: rgba(255, 50, 0, 1);
            stroke-width: inherit;
            stroke: none;
        }
    }

    &-edit-line {
        position: absolute;
        top: 0;
        left: 0;
        polyline {
            fill: none;
            stroke-width: inherit;
            stroke: rgba(255, 50, 0, 1);
        }
    }

    &-polygon_selected &-point,
    &-polygon_selected &-line {
        polyline {
            stroke: rgba(100, 200, 255, 1);
        }
    }
}