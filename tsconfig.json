{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "sky/*": ["src/*"],
        },
        "allowUmdGlobalAccess": true,
        "target": "es5",
        "module": "commonjs",
        "strict": false,
        "experimentalDecorators": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "jsx": "react",
        "lib": [
            "esnext",
            "dom",
        ]
    },
    "exclude": [
        "node_modules",
        "bin/native",
        "src/experimental",
        "src/draft"
    ],
}
