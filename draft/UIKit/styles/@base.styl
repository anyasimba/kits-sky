// production
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

button {
    border: none;
    background: transparent;
    font: inherit;
    cursor: pointer;
    &:hover, &:active, &:focus {
        outline: none;
        border: none;
    }
}

a {
    text-decoration: none;
    font: inherit;
    color: inherit;
}
